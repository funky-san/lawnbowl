<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Lawn Bowls Website</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.4/css/bulma.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="columns">
    <div class="column is-3 nav-colour">
      <%- include('navbar'); %>
    </div>
    <div class="column is-1"></div>
    <div class="column is-7 middle-section">
      <p class="has-text-centered">UPDATES</p>
      <!-- if statement adjusted and adapted from chatgpt -->
      <% if (updates && updates.length> 0) { %> <!-- if updates has something -->
        <% updates.forEach(update=> { %> <!-- display each update -->
          <div class="inner-inner-background m-4 p-4">
            <p class="is-size-5 has-text-weight-extrabold">
              <%= update.title %>
            </p>
            <p>
              <%= update.update %>
            </p>
          </div>
          <% }); %>
            <% } %>
    </div>
    <div class="column is-1"></div>
  </div>
</body>

</html>